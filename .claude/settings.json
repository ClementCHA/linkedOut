{
  "permissions": {
    "allow": [
      "Bash(pnpm test:*)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm check)",
      "Bash(pnpm run check)",
      "Bash(pnpm build)",
      "Bash(pnpm run build)",
      "Bash(git:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(secrets/**)",
      "Edit(.env*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm biome check --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
